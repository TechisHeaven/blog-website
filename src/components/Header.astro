---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links inline-flex gap-8">
			<div class="inline-flex gap-8 items-center">
			<HeaderLink  href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			</div>
					<a class="hello-btn" href="https://m.webtoo.ls/@astro" target="_blank">
						<span class="sr-only">Connect with TechisHeaven</span>
						Say "Hello!"
					</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding:  .4em;
		border-radius: 2px;
		position: absolute;
		width: 100%;
		background: transparent;
		position: sticky;
		top: 0;
		max-width: 1280px;
		margin: 0 auto;
	}
	nav {
		background: white;
		border: 1px solid rgb(128, 128, 128, .4);
		width: 100%;
		padding: .2em ;
		display: flex;
		align-items: center;
		border-radius: 32px;
		justify-content: space-between;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}

	nav .hello-btn{
		background-color: rgba(var(--black));
		color: rgba(var(--white));
		padding:.2em 1em;
		border-radius: 24px;
		box-shadow: 0px 2px 2px 1px rgba(var(--black), 40%);
		transition: .2s all ease-in-out;
		font-size: 1rem;
	}
	nav .hello-btn:hover {
		color: rgba(var(--white));
		transform: translateY(-2px);
		box-shadow: 0px 4px 4px 1px rgba(var(--black), 40%);
	}
	nav .hello-btn:active {
		color: rgba(var(--white));
		transform: translateY(0px);
		box-shadow: 0px 0px 2px 1px rgba(var(--black), 40%);
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	
	nav a {
		padding: 0.4em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
